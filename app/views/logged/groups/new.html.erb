<% content_for :container_classes, 'o-container--narrow' %>

<h1 class="c-text c-text__title">create a new group</h1>

<%= form_with model: @group, class: 'c-form' do |form| %>
  <ol class="c-form_fields">
    <li class="o-grid o-grid--column c-form_fields__item">
      <%= form.text_field :name, placeholder: 'Name for your group', class: 'c-input' %>
    </li>
    <li class="o-grid o-grid--column c-form_fields__item">
      <%= form.submit "Create Group", class: 'c-button c-button-submit' %>
    </li>
  </ol>
<% end %>




