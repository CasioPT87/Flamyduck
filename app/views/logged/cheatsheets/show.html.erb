
<% if @group %>
  <nav class='e-nav e-nav-cheatsheet-change'>
    <ul class='e-unordered-list e-unordered-list-cheatsheet-change'>
      <% @group.cheatsheets.each do |cheatsheet| %>
        <li class="e-list-item">
          <%= link_to cheatsheet.name, [@group, cheatsheet], class: 'e-link e-link-list u-margin--4' %>
        </li>
      <% end %>
    </ul>
  </nav>
<% end %>

<h1 class="e-title e-title-1"><%= @cheatsheet.name %></h1>

<% if @cheatsheet.scenarios.empty? %>
  <h3 class="e-title e-title-3">You haven't created scenarios for this cheatsheet. Click the 'plus' button at the button to add some.</h3>
<% end %>

<div class="o-container o-container-scenario" data-controller="drag-item"
  data-action="dragstart->drag-item#dragstart dragover->drag-item#dragover dragenter->drag-item#dragenter dragleave->drag-item#dragleave drop->drag-item#drop dragend->drag-item#dragend"
>
  <% @cheatsheet.sorted_scenarios.each_with_index do |scenario, index| %>

    <div class="o-container-scenario-droppable" data-controller="edit-scenario" draggable="true" data-scenario-id="<%= scenario.id %>" data-drag-item-target="scenario">
      <%# this shows the scenario %>
      <%= render 'scenarios/scenario', scenario: scenario do %>
        <%= link_to image_tag("delete-icon.png"), "#{cheatsheet_scenario_path(@cheatsheet, scenario)}?group_id=#{@group&.id}", { method: :delete } %>
        <%= image_tag 'edit-icon.png', data: { action: "click->edit-scenario#toggle" } %>
      <% end %>
      <%# this form is to edit the scenario %>
      <%= form_with model: scenario, url: cheatsheet_scenario_path(@cheatsheet, scenario),
        local: true, class: 'e-form e-form-scenario u--blue u--hidden',
        data: { 'edit-scenario-target' => "editingScenarioWrapper" } do |form|
      %>      
        <%= render partial: 'scenarios/edit_scenario', locals: { scenario_form: form } %>
      <% end %>
    </div>
  <% end %>
</div>

<%# and this is to create a new scenario %>
<div data-controller='add-scenario' class="o-container u-width--all">
  <%= render partial: 'scenarios/new_scenario', locals: { cheatsheet: @cheatsheet } %>
  <%= image_tag 'add-icon.png', class: 'e-image-scenario-add', data: { 
     action: 'click->add-scenario#toggle'
    } %>
</div>



