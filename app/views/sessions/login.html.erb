<h1 class="e-title">Log in</h1>

<%= form_tag '/login', class: 'e-form e-form-insert' do %>
   <%= text_field_tag :name, nil, placeholder: "Name", class: 'e-input' %>
   <%= password_field_tag :password, nil, placeholder: "Password", class: 'e-input' %>
   <%= submit_tag "Log in", class: 'e-button e-button-submit' %>
<%end%>
<%= link_to 'forgot your password?', new_password_reset_path, class: 'e-link e-link-forgot-password' %>
